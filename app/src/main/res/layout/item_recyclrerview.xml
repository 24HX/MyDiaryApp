<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="6dp"
    app:elevation="1dp">

<LinearLayout
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="10.8dp">

        <ImageView
            android:id="@+id/iv_circle_main"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="2dp"
            android:src="@drawable/circle" />

        <TextView
            android:id="@+id/tv_date_main"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="我是日期"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tv_id_main"
            android:layout_width="0.0000000001dp"
            android:layout_height="0.0000000001dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="17sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lift"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:background="@drawable/linear_style"
            android:orientation="horizontal">
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lift">

            <TextView
                android:id="@+id/tv_title_main"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:background="#fff"
                android:paddingLeft="16dp"
                android:paddingTop="1dp"
                android:text="我是标题"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/ll_item_content_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_title_main"
                android:background="#ffffffff">
                <TextView
                    android:id="@+id/tv_content_main"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:layout_alignParentBottom="true"
                    android:background="#ffffff"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:maxEms="42"
                    android:maxLines="5"
                    android:paddingLeft="30dp"
                    android:paddingTop="2dp"
                    android:paddingRight="15dp"
                    android:text="   在这里写些什么在这里写些什么在这里写些什么在这里写些什么在这里写些什么在这里写些什么在这里写些什么在这里写些什么在这里写些什么在这里 写些什么在这里写些什么在这里写些什么在这里写些什么在这里写些什么在这里写些什么在这里写些什么"
                    android:textColor="#1d1c1c"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/iv_pic_main"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="3"
                    android:layout_toRightOf="@id/tv_content_main" />
            </LinearLayout>


            <!--
            <RelativeLayout
                android:id="@+id/rl_edit_main"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingRight="10dp"
                android:background="#fff">
                <ImageView
                    android:id="@+id/iv_edit_main"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edit"/>
            </RelativeLayout>
            -->

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>